<Ui xmlns="http://www.blizzard.com/wow/ui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Include file="WoWInit.lua" />
    <Frame name="WI_Listener" hidden="true">
        <Scripts>
            <OnLoad>
                this:RegisterEvent("SKILL_LINES_CHANGED");
            </OnLoad>
            <OnEvent>
                WI_Run()
            </OnEvent>
        </Scripts>
    </Frame>
    <Frame name="WI_CMDFrame"  movable="true" enableMouse="true"  frameStrata="DIALOG" toplevel="true" hidden="true">
        <Anchors>
            <Anchor point="CENTER" relativeTo="UIParent">
                <Offset>
                    <AbsDimension x="0" y="0"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Size>
            <AbsDimension x="360" y="400" />
        </Size>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11" />
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="32" />
            </TileSize>
            <EdgeSize>
                <AbsValue val="32" />
            </EdgeSize>
        </Backdrop>
        <Layers>
            <Layer>
                <Texture name="$parentTitleBorder" file="Interface\DialogFrame\UI-DialogBox-Header">
                    <Size>
                        <AbsDimension x="160" y="32" />
                    </Size>
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="5" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <TexCoords left="0.2" right="0.8" top="0" bottom="0.6" />
                </Texture>
                <FontString name="$parentTitleString" font="GameFontNormal" text="WI_CMDFrameTitle">
                    <!--Window Title -->
                    <Size>
                        <AbsDimension x="140" y="0" />
                    </Size>
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="-5" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <FontHeight>
                        <AbsValue val="12" />
                    </FontHeight>
                    <Color r="1" g="0.8196079" b="0" />
                    <Shadow>
                        <Color r="0" g="0" b="0" />
                        <Offset>
                            <AbsDimension x="1" y="-1" />
                        </Offset>
                    </Shadow>
                </FontString>
                <FontString name="$parentHelp" font="GameFontNormalSmall" text="WI_HELPTEXT">
                    <Size>
                        <AbsDimension x="300" y="0" />
                    </Size>
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="-28" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <FontHeight>
                        <AbsValue val="12" />
                    </FontHeight>
                    <Color r="1" g="1" b="1" />
                    <Shadow>
                        <Color r="0" g="0" b="0" />
                        <Offset>
                            <AbsDimension x="1" y="-1" />
                        </Offset>
                    </Shadow>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Frame name="$parentLayer2" enableMouse="true">
                <Anchors>
                    <Anchor point="LEFT">
                        <Offset x="20" y="-50" />
                    </Anchor>
                    <Anchor point="TOP">
                        <Offset x="30" y="-50" />
                    </Anchor>
                    <Anchor point="BOTTOM">
                        <Offset x="30" y="41" />
                    </Anchor>
                </Anchors>
                <Size>
                    <AbsDimension x="320" y="180" />
                </Size>
                <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
                    <BackgroundInsets>
                        <AbsInset left="8" right="9" top="6" bottom="8" />
                    </BackgroundInsets>
                    <TileSize>
                        <AbsValue val="32" />
                    </TileSize>
                    <EdgeSize>
                        <AbsValue val="32" />
                    </EdgeSize>
                </Backdrop>
                <Scripts>
                    <OnMouseDown>
                        WI_CMDFrame_ScrollFrame_EditBox:SetFocus();
                    </OnMouseDown>
                </Scripts>
            </Frame>
            <ScrollFrame name="$parent_ScrollFrame" inherits="UIPanelScrollFrameTemplate">
                <Size>
                    <AbsDimension x="278" y="480"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT">
                        <Offset x="33" y="-55" />
                    </Anchor>
                    <Anchor point="TOP">
                        <Offset x="33" y="-55" />
                    </Anchor>
                    <Anchor point="BOTTOM">
                        <Offset x="33" y="49" />
                    </Anchor>
                </Anchors>
                <ScrollChild>
                    <EditBox name="$parent_EditBox" multiLine="1" font="GameFontNormalSmall" autoFocus="false">
                        <Size>
                            <AbsDimension x="278" y="480" />
                        </Size>
                        <Anchors>
                            <Anchor point="LEFT">
                                <Offset x="28" y="-60" />
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnTextChanged>
                                WI_CMDFrame_SubmitButton_Update()
								local scrollBar = getglobal(this:GetParent():GetName().."ScrollBar")
								this:GetParent():UpdateScrollChildRect();
								local min;
								local max;
								min, max = scrollBar:GetMinMaxValues();
								if ( max > 0 and (this.max ~= max) ) then
									this.max = max;
									scrollBar:SetValue(max);
								end
							</OnTextChanged>
                            <OnEscapePressed>
							    WI_CMDFrame_ScrollFrame_EditBox:ClearFocus()
							</OnEscapePressed>
                        </Scripts>
                    </EditBox>
                </ScrollChild>
            </ScrollFrame>
            <Button name="$parent_SubmitButton" text="WI_SUBMITBUTTON" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="80" y="20" />
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM">
                        <Offset>
                            <AbsDimension x="0" y="18"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
					    WI_CMDFrame_SubmitButton_OnClick();
                   </OnClick>
                </Scripts>
            </Button>
            <Button name="$parent_ExamplesButton" text="WI_EXAMPLESBUTTON" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="100" y="20" />
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM">
                        <Offset>
                            <AbsDimension x="-96" y="18"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        WI_ToggleExampleMenu()
					</OnClick>
                    <OnShow>
						this:SetFrameLevel( (this:GetParent()):GetFrameLevel() + 1 );
					</OnShow>
                </Scripts>
            </Button>
            <Button name="$parent_CancelButton" text="WI_CANCELBUTTON" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="100" y="20" />
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM">
                        <Offset>
                            <AbsDimension x="96" y="18"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        WI_CMDFrame:Hide()
					</OnClick>
                </Scripts>
            </Button>
            <Button name="$parent_Close" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-2" y="-4"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        PlaySound("igCharacterInfoClose")
					    WI_CMDFrame:Hide()
					</OnClick>
                </Scripts>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad>             
			    tinsert(UISpecialFrames, "WI_CMDFrame")
			</OnLoad>
            <OnShow>
			    WI_CMDFrame_OnShow()
			</OnShow>
            <OnHide>
			    WI_CMDFrame_OnHide()
			</OnHide>
            <OnMouseDown>
                this:StartMoving()
            </OnMouseDown>
            <OnMouseUp>
                this:StopMovingOrSizing()
            </OnMouseUp>
        </Scripts>
    </Frame>
</Ui>